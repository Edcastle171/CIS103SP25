import random

def generate_powerball():
    numbers = random.sample(range(1, 70), 5)
    powerball = random.randint(1, 26)  # Powerball number
    return sorted(numbers) + [powerball]

def generate_mega_million():
    numbers = random.sample(range(1, 71), 5)
    mega_ball = random.randint(1, 25)  # Mega Ball number
    return sorted(numbers) + [mega_ball]

def generate_lucky_day_lotto():
    numbers = random.sample(range(1, 46), 5)
    return sorted(numbers)

def generate_lotto():
    numbers = random.sample(range(1, 53), 6)
    return sorted(numbers)

def main():
    run_again = 'yes'
    while run_again.lower() == 'yes':
        print("\nLottery Number Generator")
        print("1. Power Ball")
        print("2. Mega Million")
        print("3. Lucky Day Lotto")
        print("4. Lotto")
        print("5. Quit")
        
        choice = input("Select an option (1-5): ")
        
        if choice == '1':
            print("Power Ball Numbers:", generate_powerball())
        elif choice == '2':
            print("Mega Million Numbers:", generate_mega_million())
        elif choice == '3':
            print("Lucky Day Lotto Numbers:", generate_lucky_day_lotto())
        elif choice == '4':
            print("Lotto Numbers:", generate_lotto())
        elif choice == '5':
            print("Goodbye!")
            return
        else:
            print("Invalid choice, please select a valid option.")
            continue
        
        run_again = input("Would you like to run the program again? (yes/no): ")

if __name__ == "__main__":
    main()

